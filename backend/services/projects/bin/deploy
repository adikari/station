#!/bin/bash

set -eou pipefail

AWS_ACCOUNT_ID="$(aws sts get-caller-identity --query "Account" --output text)"

STAGE=""
AWS_REGION="us-east-1"
CONFIGURE=false

usage="USAGE: $(basename "$0") [-s|--stage] <stage>

where:
    -s | --stage        stage for deployment (required)
    -c | --configure    push configs to ssm (flag)
    -h | --help         show this help text"

while [ $# -gt 0 ]; do
    if [[ $1 =~ "--"* ]]; then
        case $1 in
            -c|--configure) CONFIGURE=true;;
            --help|-h) echo "$usage"; exit; ;;
            --stage|-s) STAGE=$2;;
        esac
    fi
    shift
done

if [ -z "$STAGE" ]; then
  echo "$usage"; exit 1;
fi

export AWS_ACCOUNT_ID
export STAGE

if [ -z "$AWS_ACCOUNT_ID" ]; then
  echo "Could not read determine AWS account id.";
  exit 1;
fi

CURRENT_DIR=$(pwd)
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

echo "Moving to $DIR"

cd "$DIR"

$CONFIGURE && ./node_modules/.bin/oprah run --stage ${STAGE}

echo "AWS Account ID: $AWS_ACCOUNT_ID"

echo "Deploying resources..."
./node_modules/.bin/kumo run --stage "$STAGE"

echo "Deploying Prisma server"
./bin/deploy-prisma --stage $STAGE

echo "Deploying serverless..."
./node_modules/.bin/sls deploy --stage "$STAGE" --region "$AWS_REGION" --verbose

echo "Generating schema.."
./node_modules/.bin/webpack ./bin/generate-schema.js --output generate-schema.js
node generate-schema.js

ENGINE_API_KEY=$(yarn --silent oprah fetch -k /"$STAGE"/projects/secret/APOLLO_ENGINE_API_KEY -s "$STAGE")
yarn apollo service:push --tag="$STAGE" --key="$ENGINE_API_KEY"

cd $CURRENT_DIR
unset AWS_ACCOUNT_ID
unset STAGE

