#!/bin/bash

set -eou pipefail

AWS_ACCOUNT_ID="$(aws sts get-caller-identity --query "Account" --output text)"

STAGE=""
AWS_REGION="us-east-1"
CONFIGURE=false

usage="USAGE: $(basename "$0") [-s|--stage] <stage>

where:
    -s | --stage        stage for deployment (required)
    -c | --configure    push configs to ssm (flag)
    -h | --help         show this help text"

while [ $# -gt 0 ]; do
    if [[ $1 =~ "--"* ]]; then
        case $1 in
            -c|--configure) CONFIGURE=true;;
            --help|-h) echo "$usage"; exit; ;;
            --stage|-s) STAGE=$2;;
        esac
    fi
    shift
done

[ -z "$STAGE" ] && echo "$usage" && exit 1

export ENGINE_API_KEY=$(aws ssm get-parameter --name \
  /$STAGE/user/secret/ENGINE_API_KEY \
  --query "Parameter.Value" \
  --with-decryption | tr -d \")

export GRAPHQL_ENDPOINT=$(aws ssm get-parameter --name \
  /$STAGE/user/secret/GRAPHQL_ENDPOINT \
  --query "Parameter.Value" \
  --with-decryption | tr -d \")

export SERVICE_API_KEY=$(aws ssm get-parameter --name \
  /$STAGE/user/secret/SERVICE_API_KEY \
  --query "Parameter.Value" \
  --with-decryption | tr -d \")

export AWS_ACCOUNT_ID
export STAGE

[ -z "$AWS_ACCOUNT_ID" ] && echo "Could not determine AWS account id." && exit 1
[ -z "$ENGINE_API_KEY" ] && echo "Missing ENGINE_API_KEY." && exit 1
[ -z "$GRAPHQL_ENDPOINT" ] && echo "Missing GRAPHQL_ENDPOINT" && exit 1
[ -z "$SERVICE_API_KEY" ] && echo "Missing SERVICE_API_KEY" && exit 1

CURRENT_DIR=$(pwd)
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

echo "Moving to $DIR"

cd "$DIR"

$CONFIGURE && ./node_modules/.bin/oprah run --stage ${STAGE}

echo "AWS Account ID: $AWS_ACCOUNT_ID"

echo "Deploying resources..."
./node_modules/.bin/kumo run --stage "$STAGE"

echo "Deploying serverless..."
./node_modules/.bin/sls deploy --stage "$STAGE" --region "$AWS_REGION" --verbose

echo "Pushing schema to apollo engine..."
yarn apollo service:push --tag "$STAGE"

cd $CURRENT_DIR

unset AWS_ACCOUNT_ID
unset STAGE
unset GRAPHQL_ENDPOINT
unset SERVICE_API_KEY
unset ENGINE_API_KEY


